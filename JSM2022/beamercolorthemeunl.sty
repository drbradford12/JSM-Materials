% Gemini theme
% https://github.com/anishathalye/gemini

% ====================
% Definitions
% ====================

% Color Palette
% From https://ucomm.unl.edu/brand/colors
% Primary
\definecolor{unlred}{cmyk}{0.02, 1.0, 0.85, 0.06}
\definecolor{unlgray}{cmyk}{0.0, 0.0, 0.0, 0.25}
\definecolor{unllightcream}{cmyk}{0.03, 0.03, 0.08, 0.0}
%\definecolor{mitdarkgray}{cmyk}{0.48, 0.39, 0.39, 0.04}
%\definecolor{mitlightgray}{cmyk}{0.24, 0.20, 0.20, 0.0}

% Extra colors
\definecolor{lightgray}{RGB}{240, 240, 240}
\definecolor{cream}{RGB}{245, 241, 231}
\definecolor{lightcream}{RGB}{254, 253, 250}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=unlred}

% Headline
\setbeamercolor{headline}{fg=white,bg=unlred}

% Block
\setbeamercolor{block title}{fg=lightcream,bg=unlred}
\setbeamercolor{block separator}{bg=unlred}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=lightcream,bg=unlred}
\setbeamercolor{block alerted separator}{bg=unlred}
\setbeamercolor{block alerted body}{fg=black,bg=lightcream}

% Example Block
\setbeamercolor{block example title}{fg=lightcream,bg=unlred}
\setbeamercolor{block example separator}{bg=unlred}
\setbeamercolor{block example body}{fg=black,bg=lightcream}

% Heading
\setbeamercolor{heading}{fg=black}

% Itemize
\setbeamercolor{item}{fg=unlred}

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}